# Database Configuration
POSTGRES_PASSWORD=downloadarr_secure_password

# VPN Configuration
VPN_ENABLED=false
VPN_CONFIG_PATH=/app/vpn/config.ovpn

# Jackett Configuration
JACKETT_API_KEY=your_jackett_api_key_here

# FlareSolverr Configuration
# FlareSolverr helps bypass Cloudflare protection for torrent indexers
# No additional configuration needed - it runs automatically on port 8191

# Aria2 Configuration
ARIA2_SECRET=downloadarr_aria2_secret

# Timezone
TZ=UTC

# Download Configuration
DOWNLOAD_PATH=/downloads

# Redis Configuration (usually defaults are fine)
REDIS_HOST=redis
REDIS_PORT=6379

# API Configuration
NODE_ENV=production
PORT=3001

# Frontend Configuration
VITE_API_URL=http://localhost:3001

# External API Keys for Discovery Services
# Get your OMDB API key from: http://www.omdbapi.com/apikey.aspx
OMDB_API_KEY=your-omdb-api-key

# Get your TMDB API key from: https://www.themoviedb.org/settings/api
TMDB_API_KEY=your-tmdb-api-key

# Get your IGDB credentials from: https://api.igdb.com/
# You need to create a Twitch application and get Client ID and Client Secret
# Access tokens are now managed automatically by the application
IGDB_CLIENT_ID=your-igdb-client-id
IGDB_CLIENT_SECRET=your-igdb-client-secret
